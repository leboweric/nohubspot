# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/nohubspot

# JWT Secret for authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# SendGrid API Key for email sending
SENDGRID_API_KEY=your-sendgrid-api-key

# Google OAuth Configuration (Centralized)
# These credentials are used for ALL users - no per-organization setup needed
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# Office 365 OAuth Configuration (Optional)
# Can be configured per-organization or centralized
O365_CLIENT_ID=your-o365-client-id
O365_CLIENT_SECRET=your-o365-client-secret
O365_TENANT_ID=your-o365-tenant-id
O365_REDIRECT_URI=https://yourdomain.com/api/auth/microsoft/callback

# Encryption Keys
FERNET_KEY=generate-with-python-cryptography-fernet

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development